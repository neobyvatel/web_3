<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WeatherApp</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="flex flex-col min-h-screen">
    <header><%- include('./components/header') %></header>
    <main class="flex-1">
      <div class="max-w-4xl mx-auto p-4">
        <h1
          class="text-3xl font-semibold text-gray-900 dark:text-white text-center mb-5"
        >
          Find GitHub Users
        </h1>
        <form action="/github/search" method="get" class="mb-8">
          <div class="flex items-center">
            <input
              type="text"
              name="username"
              placeholder="Enter GitHub Username"
              class="w-full p-2.5 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              required
            />
            <button
              type="submit"
              class="ml-4 px-6 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600"
            >
              Search
            </button>
          </div>
        </form>
        <!-- Render GitHub users here -->
      </div>
    </main>
    <footer><%- include('./components/footer') %></footer>
  </body>
</html>
