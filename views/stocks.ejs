<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WeatherApp - Stocks Info</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="flex flex-col min-h-screen">
    <header><%- include('./components/header') %></header>
    <main class="flex-1">
      <div class="max-w-4xl mx-auto p-4">
        <h1
          class="text-3xl font-semibold text-gray-900 dark:text-white text-center mb-5"
        >
          Stocks Info
        </h1>
        <form action="/stocks" method="post" class="mb-4">
          <label for="stockTicker" class="block mb-2"
            >Enter Stock Ticker Symbol:</label
          >
          <input
            type="text"
            id="stockTicker"
            name="stockTicker"
            class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
          />
          <button
            type="submit"
            class="mt-2 bg-blue-500 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            Get Stock Info
          </button>
        </form>
        <div id="stocksInfo"></div>
      </div>
    </main>
    <footer><%- include('./components/footer') %></footer>
  </body>
</html>
